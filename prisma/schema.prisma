generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user{
  id       String   @id @default(cuid())
  firstname  String
  lastname   String
  email      String   @unique
  password   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deleteAt DateTime
  notes  Note[]
}
model Note {
  id       String   @id @default(cuid())
  title    String
  content  String
  userid String
  user     user     @relation(fields: [userid], references: [id])
  categoryId String
  category Category @relation( fields: [categoryId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deleteAt DateTime

  TagNote TagNote[]
}
model Category{
  id       String   @id @default(cuid())
  title String
  notes  Note[]



}
model tag{
  id       String   @id @default(cuid())
  title String
  tagnotes TagNote[]

}
 model TagNote{
  id       String   @id @default(cuid())
  tagid String
  tag     tag     @relation(fields: [tagid], references: [id])
  noteid String
  notes     Note     @relation(fields: [noteid], references: [id])
 }